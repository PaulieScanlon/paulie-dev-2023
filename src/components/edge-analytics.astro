<edge-analytics></edge-analytics>
<script async>
class EdgeAnalytics extends HTMLElement {
  constructor() {
    super();
    setTimeout(function () {
      navigator.sendBeacon('/api/page-view', JSON.stringify({ slug: window.location.pathname }));
    }, 10000);
  }
}
customElements.define('edge-analytics', EdgeAnalytics);
</script>
