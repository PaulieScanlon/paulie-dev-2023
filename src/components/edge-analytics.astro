<edge-analytics></edge-analytics>
<script is:inline async>
class EdgeAnalytics extends HTMLElement {
  constructor() {
    super();
    setTimeout(function () {
      navigator.sendBeacon(
        '/api/page-view',
        JSON.stringify({ slug: window.location.pathname, referrer: document.referrer })
      );
    }, 10000);
  }
}
customElements.define('edge-analytics', EdgeAnalytics);
</script>
