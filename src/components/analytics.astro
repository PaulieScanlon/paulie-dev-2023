---
import { geolocation } from '@vercel/edge';

const date = new Date();
const { flag, country, city, latitude, longitude } = geolocation(Astro.request);
const { slug } = Astro.props;
---

<meta name={`date:${date}`} />
<meta name={`slug:${slug}`} />
<meta name={`flag:${flag}`} />
<meta name={`country:${country}`} />
<meta name={`city:${city}`} />
<meta name={`latitude:${latitude}`} />
<meta name={`longitude:${longitude}`} />
