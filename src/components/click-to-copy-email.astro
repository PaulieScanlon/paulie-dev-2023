<script>
  const tooltip = document.getElementsByClassName('copyEmailTooltip');

  const copyText = async (event) => {
    const text = event.target.innerHTML;

    try {
      await navigator.clipboard.writeText(text);

      for (let i = 0; i < tooltip.length; i++) {
        tooltip[i].innerHTML = 'Copied!';
      }
    } catch (error) {
      console.error('Failed to copy: ', error);
    }
  };

  const setTooltipText = () => {
    for (let i = 0; i < tooltip.length; i++) {
      tooltip[i].innerHTML = 'Click to Copy';
    }
  };

  document.getElementById('copyEmailBtn').addEventListener('click', copyText);
  document.getElementById('copyEmailBtn').addEventListener('mouseout', () => {
    setTimeout(() => {
      setTooltipText();
    }, 200);
  });

  setTooltipText();
</script>

