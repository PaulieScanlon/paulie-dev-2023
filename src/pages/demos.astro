---
export const prerender = true;

import Main from '../layouts/main.astro';
import Aside from '../components/aside.astro';
import ProfileCard from '../components/profile-card.astro';
import CollectionsList from '../components/collections-list.astro';

import { demos } from '../utils/all-collections';
---

<Main title='Demos' description='Product demos and marketing proof of concepts' slug='/demos/'>
  <strong class='flex items-center justify-between gap-2 text-sm text-brand-primary'
    >Demos
    <span class='text-inherit text-xs border border-brand-outline bg-surface px-2 py-1'>{`x${demos.length}`}</span>
  </strong>
  <h1 class='mb-0'>Marketing Campaigns, Projects and Demos</h1>
  <p>
    I usually write and create example sites and repositories, but occasionally I'll design, and build, full production
    sites to demonstrate what's possible when you pop your thinking cap on.
  </p>
  <CollectionsList collections={demos} />
  <Aside>
    <ProfileCard />
  </Aside>
</Main>
