---
export const prerender = true;

import { sql } from '../neon';

import Main from '../layouts/main.astro';

import Aside from '../components/aside.astro';
import ProfileCard from '../components/profile-card.astro';
import CollectionsList from '../components/collections-list.astro';
import CtaInternal from '../components/cta-internal.astro';
import ListExternalPublishers from '../components/list-external-publishers.astro';
import GlobeAllCities from '../components/globe-all-cities';

import groupByCity from '../utils/group-by-city';
import groupByPublication from '../utils/group-by-publication';

import { getAllCollections } from '../utils/all-collections';

const { collections, articles, posts, ghosts } = await getAllCollections();

let analyticsData = [];
const period = 30;

async function fetchData(query: string) {
  try {
    const data = await sql(query);

    if (!data.length) {
      throw new Error('No data found.');
    }

    return data;
  } catch (err) {
    console.error('Failed to fetch data:', err);
    throw new Error('Could not load data.');
  }
}

try {
  analyticsData = await fetchData(`
    SELECT *
    FROM analytics
    WHERE date >= NOW() - INTERVAL '${period} days'
  `);
} catch (error) {
  analyticsData = [];
}
---

<Main title='Home' description="Paul Scanlon's site" slug='/'>
  <div class='relative flex items-center md:min-h-96'>
    <div class='relative w-full md:w-auto lg:z-10 max-w-none  lg:max-w-md'>
      <strong class='text-sm text-brand-primary block mb-2'>Home</strong>
      <h1 class='uppercase text-5xl mb-2'>Paul Scanlon</h1>
      <div class='mb-4'>
        <h2 class='text-brand-text font-normal text-xl mb-2'>Technical Product Marketing Manager</h2>
        <p class='text-white text-sm mb-3'>
          Currently at <a href="https://mastra.ai/" class='text-brand-primary hover:text-white transition-colors font-medium'>Mastra</a>
        </p>
      </div>
      <div class='max-w-2xl'>
        <p class='text-slate-300 leading-relaxed mb-4'>
          Developer for <strong>20 years</strong>, now helping shape the next generation of AI-powered development tools.
        </p>
        <ul class='flex flex-wrap items-baseline gap-2 list-none m-0 p-0'>
          <li class='m-0 p-0 rounded text-xs text-brand-salmon border border-brand-outline bg-brand-surface'>
            <a href='/tags/ai/' class='block no-underline px-2 py-1 text-inherit font-medium duration-300 transition-colors hover:text-white'>AI</a>
          </li>
          <li class='m-0 p-0 rounded text-xs text-brand-salmon border border-brand-outline bg-brand-surface'>
            <a href='/tags/typescript/' class='block no-underline px-2 py-1 text-inherit font-medium duration-300 transition-colors hover:text-white'>TypeScript</a>
          </li>
          <li class='m-0 p-0 rounded text-xs text-brand-salmon border border-brand-outline bg-brand-surface'>
            <a href='/tags/react/' class='block no-underline px-2 py-1 text-inherit font-medium duration-300 transition-colors hover:text-white'>React</a>
          </li>
          <li class='m-0 p-0 rounded text-xs text-brand-salmon border border-brand-outline bg-brand-surface'>
            <a href='/tags/postgres/' class='block no-underline px-2 py-1 text-inherit font-medium duration-300 transition-colors hover:text-white'>PostgreSQL</a>
          </li>
        </ul>
      </div>
    </div>
    <div class='absolute -top-10 sm:-top-6 left-0 md:left-auto right-0 flex justify-center invisible lg:visible'>
      <GlobeAllCities
        data={groupByCity(analyticsData)}
        altitude={2.4}
        isDashboard={false}
        classNames='pointer-events-none'
      />
      <div class='absolute top-4 right-0'>
        <div class='leading-3'>
          <time class='block text-brand-muted text-xs text-right'>{`Site visits from last ${period} Days`}</time>
          <small class='block text-brand-secondary text-xs text-right'
            >Powered by
            <a href='https://neon.tech' target='_blank' rel='noopener' class='text-xs text-right'>Neon</a>
          </small>
        </div>
      </div>
    </div>
  </div>

  <h2 class='mb-0 text-brand-salmon'>Latest Post</h2>
  <p>Latest post published here on my site.</p>
  <CollectionsList collections={posts} slice={3} />
  <CtaInternal href='/posts/'>{`See all ${posts.length} Posts`}</CtaInternal>

  <h2 class='m-0 uppercase'>Publishers</h2>
  <p class='mt-0 mb-4 text-slate-300'>All the publications Iâ€™ve contributed to.</p>
  <ListExternalPublishers data={groupByPublication(collections)} />
  <CtaInternal href='/dashboard/'>See more statistics</CtaInternal>

  <h2 class='mb-0 text-brand-salmon'>Latest Article</h2>
  <p>Latest articles written for external publisher.</p>
  <CollectionsList collections={articles} slice={3} />
  <CtaInternal href='/articles/'>{`See all ${articles.length} Articles`}</CtaInternal>

  <h2 class='mb-0 text-brand-salmon'>Latest Ghostwriting</h2>
  <p>Latest ghost-written article.</p>
  <CollectionsList collections={ghosts} slice={3} />
  <CtaInternal href='/ghosts/'>{`See all ${ghosts.length} Ghosts`}</CtaInternal>

  <Aside>
    <ProfileCard />
  </Aside>
</Main>
